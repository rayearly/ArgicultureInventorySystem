@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated && Session["UserSessionId"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right"  style="font-weight:900">
        <li>
            @Html.ActionLink("Hello " + User.Identity.Name + "! 👋", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Logout 🏳️</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="font-weight:900">
        <li style="font-weight:bold">@Html.ActionLink("Register New User 🙆", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in 🚪", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
